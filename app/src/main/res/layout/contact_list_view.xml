<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_700"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/contact_list_icon_width"
        android:layout_height="@dimen/contact_list_icon_height"
        android:layout_gravity="center"
        android:padding="@dimen/layout_padding"
        android:layout_margin="@dimen/layout_padding"
        app:srcCompat="@drawable/diet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/layout_padding"
        android:background="@color/light_lime"
        android:padding="@dimen/inner_layout_padding">

        <TextView
            android:id="@+id/contact_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/contact_title_size" />

        <TextView
            android:id="@+id/contact_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"
            android:textStyle="italic" />
    </LinearLayout>


</LinearLayout>