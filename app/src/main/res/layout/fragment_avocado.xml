<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_lime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:layout_margin="@dimen/layout_padding"
        tools:context=".SampleHealthyRecipes.AvocadoFragment">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="@dimen/layout_padding"
            android:src="@drawable/avacado" />

        <TextView
            android:id="@+id/recipeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"
            android:text="@string/avocadoDesc" />

        <TextView
            android:id="@+id/nutriFacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nutrition"
            android:layout_margin="@dimen/layout_padding"
            android:padding="@dimen/layout_padding"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/green_700" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/inner_layout_padding"
            android:background="@color/lightlime">
            <TextView
                android:id="@+id/calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/contact_list_text_size"
                android:text="@string/nutritionContent" />

            <TextView
                android:id="@+id/protein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/contact_list_text_size"
                android:text="@string/proteinContent" />

            <TextView
                android:id="@+id/carbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/carboContent"
                android:textSize="@dimen/contact_list_text_size"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fatContent"
                android:textSize="@dimen/contact_list_text_size"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cholesterolContent"
                android:textSize="@dimen/contact_list_text_size"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sodiumContent"
                android:textSize="@dimen/contact_list_text_size"
                android:textColor="@color/black" />


        </LinearLayout>


        <TextView
            android:id="@+id/recipeIng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avocado_ing"
            android:layout_margin="@dimen/layout_padding"
            android:padding="@dimen/layout_padding"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/green_700"/>

        <TextView
            android:id="@+id/ing1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient1"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient2"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient3"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient4"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient5"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient6"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient7"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ing8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient8"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/directions"
            android:layout_margin="@dimen/layout_padding"
            android:padding="@dimen/layout_padding"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:textColor="@color/green_700"/>

        <TextView
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step1"
            android:layout_margin="@dimen/layout_padding"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step2"
            android:layout_margin="@dimen/layout_padding"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step3"
            android:layout_margin="@dimen/layout_padding"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/stp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/step4"
            android:layout_margin="@dimen/layout_padding"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/black"/>


    </LinearLayout>

</ScrollView>
